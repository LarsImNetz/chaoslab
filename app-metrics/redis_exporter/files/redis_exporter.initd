output_log="${output_log:-/dev/null}"
error_log="${error_log:-${REDIS_EXPORTER_LOGDIR}/error.log}"

name="${name:-Redis Exporter}"
command="/usr/bin/redis_exporter"
command_args="${REDIS_EXPORTER_OPTS}"
command_user="${command_user:-redis_exporter:redis_exporter}"
command_background=yes
pidfile="/run/${RC_SVCNAME}.pid"
start_stop_daemon_args="${SSD_OPTS}
	-1 ${output_log} -2 ${error_log}"

depend() {
	need net
}

start_pre() {
	checkpath -d -m 0750 -o "${command_user}" "${REDIS_EXPORTER_LOGDIR}"
}
