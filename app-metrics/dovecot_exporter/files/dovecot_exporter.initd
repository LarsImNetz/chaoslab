output_log="${output_log:-/dev/null}"
error_log="${error_log:-${DOVECOT_EXPORTER_LOGDIR}/error.log}"

name="${name:-Dovecot Exporter}"
command="/usr/bin/dovecot_exporter"
command_args="${DOVECOT_EXPORTER_OPTS}"
command_user="${command_user:-dovecot_exporter:dovecot_exporter}"
command_background=yes
pidfile="/run/${RC_SVCNAME}.pid"
start_stop_daemon_args="${SSD_OPTS}
	-1 ${output_log} -2 ${error_log}"

depend() {
	need net
}

start_pre() {
	checkpath -d -m 0750 -o "${command_user}" "${DOVECOT_EXPORTER_LOGDIR}"
}
